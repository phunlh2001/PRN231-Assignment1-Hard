@model IEnumerable<BusinessObjects.Objects.Member>
@{
    ViewData["Title"] = "Users";
}

<h2 class="text-center">All users information</h2>
<hr />
<table class="table">
    <thead class="table thead-light table-bordered">
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Company</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Email == "admin@estore.com") {
                continue;
            }
            <tr>
                <td>@item.Email</td>
                <td>@item.CompanyName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
            </tr>
        }
    </tbody>
</table>